{
	"$schema": "https://raw.githubusercontent.com/Sapiens-OSS/hammerstone-framework/feature/data-driven-api/schemas/object.schema.json",
	"hammerstone:object_definition": {
		"description": {
			"identifier": "bone_broth"
		},
		"components": {
			"hs_object": {
				"model": "boneBroth"
			},
			"hs_resource": {
				"link_to_storage": "bowl"
			},
			"hs_evolving_object": {
				"time_years": 0.5,
				"category": "rot",
				"transform_to": [
					"firedBowl"
				]
			},
			"hs_food": {
				"value": 0.7,
				"portions": 1,
				"items_when_eaten": [
					"firedBowl"
				]
			}
		}
	}
}